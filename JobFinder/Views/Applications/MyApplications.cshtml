@model IEnumerable<JobFinder.Models.JobApplication>

@{
    ViewBag.Title = "My Applications";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-file-alt text-primary me-2"></i>
                        My Job Applications
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>No applications yet</strong><br>
                            <span class="text-muted">You haven't applied for any jobs yet. Start browsing available positions!</span>
                            <br><br>
                            <a href="@Url.Action("Index", "JobPosts")" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Browse Jobs
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var application in Model)
                            {
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-header bg-white border-0 py-3">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0">@application.JobPost.Title</h6>
                                                <span class="badge bg-@(application.Status == "Pending" ? "warning" : application.Status == "Accepted" ? "success" : application.Status == "Rejected" ? "danger" : "info")">
                                                    @application.Status
                                                </span>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <h6 class="card-subtitle mb-2 text-muted">
                                                <i class="fas fa-building me-1"></i>@application.JobPost.Company.UserName
                                            </h6>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-map-marker-alt me-1"></i>@application.JobPost.Location
                                                </small>
                                            </p>
                                            <p class="card-text">
                                                @if (application.JobPost.Description != null && application.JobPost.Description.Length > 100)
                                                {
                                                    @(application.JobPost.Description.Substring(0, 100) + "...")
                                                }
                                                else
                                                {
                                                    @application.JobPost.Description
                                                }
                                            </p>

                                            
                                            @if (!string.IsNullOrEmpty(application.CompanyResponse))
                                            {
                                                <div class="alert alert-success mt-3">
                                                    <h6 class="alert-heading mb-2">
                                                        <i class="fas fa-reply me-2"></i>Company Response @(application.ResponseDate.HasValue ? application.ResponseDate.Value.ToString("M/d/yyyy h:mm") : "")
                                                    </h6>
                                                    <p class="mb-0">@application.CompanyResponse</p>
                                                </div>
                                            }

                                            <div class="d-flex justify-content-between align-items-center mt-3">
                                                <small class="text-muted">Category: @application.JobPost.Category</small>
                                                <div>
                                                    <a href="@Url.Action("Details", new { id = application.Id })" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-eye me-1"></i>View Details
                                                    </a>
                                                    <a href="@Url.Action("Details", "JobPosts", new { id = application.JobPost.Id })" class="btn btn-outline-secondary btn-sm">
                                                        <i class="fas fa-briefcase me-1"></i>View Job
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-white border-0">
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                Applied on @application.AppliedOn.ToString("MMM dd, yyyy 'at' HH:mm")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            
            @if (Model != null && Model.Any())
            {
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm text-center">
                            <div class="card-body">
                                <h4 class="text-primary">@Model.Count()</h4>
                                <small class="text-muted">Total Applications</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm text-center">
                            <div class="card-body">
                                <h4 class="text-warning">@Model.Count(a => a.Status == "Pending")</h4>
                                <small class="text-muted">Pending</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm text-center">
                            <div class="card-body">
                                <h4 class="text-success">@Model.Count(a => a.Status == "Accepted")</h4>
                                <small class="text-muted">Accepted</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm text-center">
                            <div class="card-body">
                                <h4 class="text-info">@Model.Count(a => !string.IsNullOrEmpty(a.CompanyResponse))</h4>
                                <small class="text-muted">With Response</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "JobPosts")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Browse Jobs
        </a>
    </div>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
