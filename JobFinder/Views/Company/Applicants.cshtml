@model IEnumerable<JobFinder.Models.JobApplication>

@{
    ViewBag.Title = "Job Applicants";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users text-primary me-2"></i>
                        Job Applicants
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>No applicants yet</strong><br>
                            <span class="text-muted">Candidates will appear here once they apply for this position.</span>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Applicant</th>
                                        <th>Email</th>
                                        <th>Applied On</th>
                                        <th>Status</th>
                                        <th>CV File</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                        <i class="fas fa-user text-white"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@item.Candidate.UserName</strong>
                                                        @if (!string.IsNullOrEmpty(item.CompanyResponse))
                                                        {
                                                            <br><small class="text-success">
                                                                <i class="fas fa-reply me-1"></i>Responded
                                                            </small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.Candidate.Email</td>
                                            <td>@item.AppliedOn.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge bg-@(item.Status == "Pending" ? "warning" : item.Status == "Accepted" ? "success" : item.Status == "Rejected" ? "danger" : "info")">
                                                    @item.Status
                                                </span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.CvFilePath))
                                                {
                                                    <a href="@Url.Action("DownloadCV", "Applications", new { id = item.Id })" class="btn btn-outline-info btn-sm">
                                                        <i class="fas fa-download me-1"></i>Download CV
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No CV uploaded</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("ViewApplicationDetails", new { id = item.Id })" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-eye me-1"></i>View Details
                                                    </a>
                                                    <a href="@Url.Action("RespondToApplication", new { id = item.Id })" class="btn btn-outline-success btn-sm">
                                                        <i class="fas fa-reply me-1"></i>Respond
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                        if (!string.IsNullOrEmpty(item.CompanyResponse))
                                        {
                                            <tr class="table-light">
                                                <td colspan="6">
                                                    <div class="p-3">
                                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                                            <h6 class="mb-0">
                                                                <i class="fas fa-comment text-primary me-2"></i>
                                                                Company Response @(item.ResponseDate.HasValue ? item.ResponseDate.Value.ToString("M/d/yyyy h:mm") : "")
                                                            </h6>
                                                            <form method="post" action="@Url.Action("DeleteResponse", "Company", new { id = item.Id })" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this response?');">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                                    <i class="fas fa-trash me-1"></i>Delete Response
                                                                </button>
                                                            </form>
                                                        </div>
                                                        <div class="bg-light p-3 rounded">
                                                            @item.CompanyResponse
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            
            @if (Model.Any())
            {
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm text-center">
                            <div class="card-body">
                                <h4 class="text-primary">@Model.Count()</h4>
                                <small class="text-muted">Total Applicants</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm text-center">
                            <div class="card-body">
                                <h4 class="text-warning">@Model.Count(a => a.Status == "Pending")</h4>
                                <small class="text-muted">Pending</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm text-center">
                            <div class="card-body">
                                <h4 class="text-success">@Model.Count(a => a.Status == "Accepted")</h4>
                                <small class="text-muted">Accepted</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 shadow-sm text-center">
                            <div class="card-body">
                                <h4 class="text-info">@Model.Count(a => !string.IsNullOrEmpty(a.CompanyResponse))</h4>
                                <small class="text-muted">Responded</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("MyPosts")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to My Posts
        </a>
    </div>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"> 