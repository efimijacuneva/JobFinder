@model IEnumerable<JobFinder.Models.JobPost>

@{
    ViewBag.Title = "My Job Posts";
}

<h2>My Job Posts</h2>

<div class="mb-3">
    <a href="@Url.Action("Create", "JobPosts")" class="btn btn-primary">Create New Job Post</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>No job posts yet</h4>
        <p>You haven't posted any jobs yet. Start by creating your first job post!</p>
        <a href="@Url.Action("Create", "JobPosts")" class="btn btn-primary">Post Your First Job</a>
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">@item.Title</h6>
                        <span class="badge bg-primary">@item.Category</span>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            @if (item.Description != null && item.Description.Length > 100)
                            {
                                @(item.Description.Substring(0, 100) + "...")
                            }
                            else
                            {
                                @item.Description
                            }
                        </p>
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="bi bi-geo-alt"></i> @item.Location
                                </small>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">
                                    Posted @item.DatePosted.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <a href="@Url.Action("Applicants", new { id = item.Id })" class="btn btn-info btn-sm">
                                    <i class="fas fa-users me-1"></i>View Applicants
                                </a>
                                <a href="@Url.Action("Details", "JobPosts", new { id = item.Id })" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>View Job
                                </a>
                            </div>
                            <div>
                                <a href="@Url.Action("Edit", "JobPosts", new { id = item.Id })" class="btn btn-warning btn-sm me-2">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <form method="post" action="@Url.Action("Delete", "JobPosts")" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this job post? This action cannot be undone.')">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="mt-4">
    <a href="@Url.Action("Index", "JobPosts")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to All Jobs
    </a>
</div>


