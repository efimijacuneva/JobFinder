@model JobFinder.Models.JobPost

@{
    ViewBag.Title = "Job Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h2 class="card-title mb-2">@Model.Title</h2>
                            <p class="text-muted mb-3">
                                <i class="fas fa-building me-2"></i>@Model.Company.UserName
                            </p>
                            <div class="d-flex flex-wrap gap-2">
                                <span class="badge bg-primary">
                                    <i class="fas fa-map-marker-alt me-1"></i>@Model.Location
                                </span>
                                <span class="badge bg-info">
                                    <i class="fas fa-tag me-1"></i>@Model.Category
                                </span>
                                <span class="badge bg-secondary">
                                    <i class="fas fa-calendar me-1"></i>Posted @Model.DatePosted.ToString("MMM dd, yyyy")
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4 text-end">
                            @if (User.IsInRole("Candidate"))
                            {
                                <a href="@Url.Action("Create", "Applications", new { id = Model.Id })" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>Apply Now
                                </a>
                            }
                            else if (User.IsInRole("Company") && Model.CompanyId == ViewBag.CurrentUserId)
                            {
                                <div class="d-flex flex-column gap-2">
                                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                                        <i class="fas fa-edit me-2"></i>Edit Job
                                    </a>
                                    <a href="@Url.Action("Applicants", "Company", new { id = Model.Id })" class="btn btn-info">
                                        <i class="fas fa-users me-2"></i>View Applicants
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

           
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-file-alt text-primary me-2"></i>
                        Job Description
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="job-description">
                        @Html.Raw(Model.Description.Replace("\n", "<br>"))
                    </div>
                </div>
            </div>

            
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Job Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <small class="text-muted d-block">Job Title</small>
                                <strong>@Model.Title</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <small class="text-muted d-block">Location</small>
                                <strong>@Model.Location</strong>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <small class="text-muted d-block">Category</small>
                                <strong>@Model.Category</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <small class="text-muted d-block">Date Posted</small>
                                <strong>@Model.DatePosted.ToString("MMMM dd, yyyy")</strong>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="info-item mb-3">
                                <small class="text-muted d-block">Company</small>
                                <strong>@Model.Company.UserName</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            
            <div class="d-flex justify-content-between align-items-center">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Jobs
                </a>
                
                @if (User.IsInRole("Candidate"))
                {
                    <a href="@Url.Action("Create", "Applications", new { id = Model.Id })" class="btn btn-primary">
                        <i class="fas fa-paper-plane me-2"></i>Apply for this Position
                    </a>
                }
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .job-description {
        line-height: 1.6;
        font-size: 1.1rem;
    }
    
    .info-item {
        padding: 0.5rem 0;
    }
    
    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
    
    .btn-lg {
        padding: 0.75rem 2rem;
        font-size: 1.1rem;
    }
    
    @@media (max-width: 768px) {
        .col-md-4.text-end {
            text-align: center !important;
            margin-top: 1rem;
        }
        
        .d-flex.justify-content-between {
            flex-direction: column;
            gap: 1rem;
        }
        
        .d-flex.justify-content-between .btn {
            width: 100%;
        }
    }
</style>