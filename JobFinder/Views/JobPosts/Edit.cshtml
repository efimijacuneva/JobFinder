@model JobFinder.Models.JobPost

@{
    ViewBag.Title = "Edit Job Post";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-edit text-primary me-2"></i>
                        Edit Job Post
                    </h5>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("Edit", "JobPosts", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.CompanyId)
                        @Html.HiddenFor(m => m.DatePosted)

                        

                        <div class="mb-3">
                            <label for="Title" class="form-label">
                                <i class="fas fa-briefcase text-muted me-2"></i>Job Title
                            </label>
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Enter job title" })
                            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            <label for="Description" class="form-label">
                                <i class="fas fa-align-left text-muted me-2"></i>Job Description
                            </label>
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "6", placeholder = "Describe the job responsibilities, requirements, and benefits..." })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger small" })
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Location" class="form-label">
                                        <i class="fas fa-map-marker-alt text-muted me-2"></i>Location
                                    </label>
                                    @Html.DropDownListFor(m => m.Location, ViewBag.Towns as SelectList, "Select Town", new { @class = "form-select" })
                                    @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger small" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Category" class="form-label">
                                        <i class="fas fa-tag text-muted me-2"></i>Category
                                    </label>
                                    @Html.DropDownListFor(m => m.Category, 
                                        new SelectList(new[] { "Technology", "Marketing", "Sales", "Finance", "Healthcare", "Education", "Other" }), 
                                        "Select Category", new { @class = "form-select" })
                                    @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger small" })
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Update Job Post
                            </button>
                        </div>
                    }
                </div>
            </div>

            
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle text-info me-2"></i>
                        Job Post Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted d-block">Posted Date</small>
                            <strong>@Model.DatePosted.ToString("MMM dd, yyyy")</strong>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted d-block">Job ID</small>
                            <strong>#@Model.Id</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
} 