@model IEnumerable<JobFinder.Models.JobPost>

@{
    ViewBag.Title = "Browse Jobs";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2>Browse Job Opportunities</h2>
    </div>
    <div class="col-md-6 text-end">
        @if (User.IsInRole("Company"))
        {
            <a href="@Url.Action("Create")" class="btn btn-success">
                <i class="fas fa-plus me-1"></i>Post New Job
            </a>
        }
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <form method="get" class="row g-2">
            <div class="col-md-3">
                @Html.DropDownList("location", ViewBag.Towns as SelectList, "All Locations", new { @class = "form-select form-select-sm" })
            </div>
            <div class="col-md-3">
                <select name="category" class="form-select form-select-sm">
                    <option value="">All Categories</option>
                    <option value="Technology" @(Request.QueryString["category"] == "Technology" ? "selected" : "")>Technology</option>
                    <option value="Marketing" @(Request.QueryString["category"] == "Marketing" ? "selected" : "")>Marketing</option>
                    <option value="Sales" @(Request.QueryString["category"] == "Sales" ? "selected" : "")>Sales</option>
                    <option value="Finance" @(Request.QueryString["category"] == "Finance" ? "selected" : "")>Finance</option>
                    <option value="Healthcare" @(Request.QueryString["category"] == "Healthcare" ? "selected" : "")>Healthcare</option>
                    <option value="Education" @(Request.QueryString["category"] == "Education" ? "selected" : "")>Education</option>
                    <option value="Other" @(Request.QueryString["category"] == "Other" ? "selected" : "")>Other</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fas fa-search me-1"></i>Search
                </button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-times me-1"></i>Clear
                </a>
            </div>
        </form>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        <h4>No jobs found</h4>
        <p>Try adjusting your search criteria or check back later for new opportunities.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Company.UserName</h6>
                        <p class="card-text">
                            @if (item.Description != null && item.Description.Length > 150)
                            {
                                @(item.Description.Substring(0, 150) + "...")
                            }
                            else
                            {
                                @item.Description
                            }
                        </p>
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="bi bi-geo-alt"></i> @item.Location
                                </small>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">
                                    <i class="bi bi-tag"></i> @item.Category
                                </small>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">Posted @item.DatePosted.ToString("MMM dd, yyyy")</small>
                            <div>
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary btn-sm">View Details</a>
                                @if (User.IsInRole("Candidate"))
                                {
                                    <a href="@Url.Action("Create", "Applications", new { id = item.Id })" class="btn btn-success btn-sm">Apply Now</a>
                                }
                                @if (User.IsInRole("Company"))
                                {
                                    var currentUserId = ViewBag.CurrentUserId as string;
                                    if (!string.IsNullOrEmpty(currentUserId) && item.CompanyId == currentUserId)
                                    {
                                        <a href="@Url.Action("Edit", "JobPosts", new { id = item.Id })" class="btn btn-warning btn-sm me-2">
                                            <i class="fas fa-edit me-1"></i>Edit
                                        </a>
                                        <form method="post" action="@Url.Action("Delete", "JobPosts")" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this job post?')">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </button>
                                        </form>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="text-center mt-4">
    @{
        var jobCount = Model != null ? Model.Count() : 0;
    }
    <p class="text-muted">Found @jobCount job@(jobCount == 1 ? "" : "s")</p>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
