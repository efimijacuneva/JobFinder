@model JobFinder.Models.IndexViewModel
@{
    ViewBag.Title = "Profile";
}

<div class="container py-5">
    <div class="row">
        
        <div class="col-12 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <h2 class="card-title mb-2">Welcome, @User.Identity.Name!</h2>
                    <p class="text-muted mb-0">
                        @if (User.IsInRole("Company"))
                        {
                            <span class="badge bg-success me-2">Company Account</span>
                            <span>Manage your job postings and review applications</span>
                        }
                        else if (User.IsInRole("Candidate"))
                        {
                            <span class="badge bg-info me-2">Candidate Account</span>
                            <span>Browse jobs and track your applications</span>
                        }
                    </p>
                </div>
            </div>
        </div>

       
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cog text-primary me-2"></i>
                        Account Settings
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center p-3 border rounded settings-item">
                                <div class="settings-icon me-3">
                                    <i class="fas fa-lock text-primary"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Password</h6>
                                    <small class="text-muted">
                                        @if (Model.HasPassword)
                                        {
                                            <span>Password is set</span>
                                        }
                                        else
                                        {
                                            <span>No password set</span>
                                        }
                                    </small>
                                </div>
                                <div>
                                    @if (Model.HasPassword)
                                    {
                                        @Html.ActionLink("Change", "ChangePassword", null, new { @class = "btn btn-outline-primary btn-sm" })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Set", "SetPassword", null, new { @class = "btn btn-outline-primary btn-sm" })
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center p-3 border rounded settings-item">
                                <div class="settings-icon me-3">
                                    <i class="fas fa-shield-alt text-primary"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">External Logins</h6>
                                    <small class="text-muted">@Model.Logins.Count connected accounts</small>
                                </div>
                                <div>
                               
                                    <button class="btn btn-outline-secondary btn-sm" disabled>Coming Soon</button>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center p-3 border rounded settings-item">
                                <div class="settings-icon me-3">
                                    <i class="fas fa-mobile-alt text-primary"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Phone Number</h6>
                                    <small class="text-muted">
                                        @(string.IsNullOrEmpty(Model.PhoneNumber) ? "Not set" : Model.PhoneNumber)
                                    </small>
                                </div>
                                <div>
                                    <button class="btn btn-outline-secondary btn-sm" disabled>Coming Soon</button>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center p-3 border rounded settings-item">
                                <div class="settings-icon me-3">
                                    <i class="fas fa-key text-primary"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Two-Factor Auth</h6>
                                    <small class="text-muted">Enhanced security</small>
                                </div>
                                <div>
                                    <button class="btn btn-outline-secondary btn-sm" disabled>Coming Soon</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt text-primary me-2"></i>
                        Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    @if (User.IsInRole("Company"))
                    {
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Create", "JobPosts")" class="btn btn-primary quick-action-btn">
                                <i class="fas fa-plus me-2"></i>Post New Job
                            </a>
                            <a href="@Url.Action("MyPosts", "Company")" class="btn btn-outline-primary quick-action-btn">
                                <i class="fas fa-briefcase me-2"></i>My Job Posts
                            </a>
                        </div>
                    }
                    else if (User.IsInRole("Candidate"))
                    {
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Index", "JobPosts")" class="btn btn-primary quick-action-btn">
                                <i class="fas fa-search me-2"></i>Browse Jobs
                            </a>
                            <a href="@Url.Action("MyApplications", "Applications")" class="btn btn-outline-primary quick-action-btn">
                                <i class="fas fa-file-alt me-2"></i>My Applications
                            </a>
                        </div>
                    }
                </div>
            </div>

            
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Account Info
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Email</small>
                        <strong>@User.Identity.Name</strong>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block">Account Type</small>
                        <strong>
                            @if (User.IsInRole("Company"))
                            {
                                <span class="text-success">Company</span>
                            }
                            else if (User.IsInRole("Candidate"))
                            {
                                <span class="text-info">Candidate</span>
                            }
                        </strong>
                    </div>
                    <div>
                        <small class="text-muted d-block">Member Since</small>
                        <strong>@DateTime.Now.ToString("MMMM yyyy")</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">